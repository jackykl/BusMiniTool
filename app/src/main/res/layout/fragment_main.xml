<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/LL0"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/setting_shape"  >



    <RelativeLayout
        android:id="@+id/RL0"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="0.25" >

        <ImageView
            android:id="@+id/MenuImageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/bus_menu" />

        <ImageButton
            android:id="@+id/BtnP2P"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="42dp"
            android:layout_marginTop="144dp"
            android:background="@null" />

        <ImageButton
            android:id="@+id/BTNJourneyTracker"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignLeft="@+id/BtnP2P"
            android:layout_below="@+id/BtnP2P"
            android:layout_marginTop="25dp"
            android:background="@null" />

        <ImageButton
            android:id="@+id/BTNNearBy"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_above="@+id/BTNJourneyTracker"
            android:layout_alignParentRight="true"
            android:layout_marginRight="36dp"
            android:background="@null" />

        <ImageButton
            android:id="@+id/BTNInputBusNo"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignBaseline="@+id/BTNJourneyTracker"
            android:layout_alignBottom="@+id/BTNJourneyTracker"
            android:layout_alignLeft="@+id/BTNNearBy"
            android:background="@null" />

    </RelativeLayout>

</LinearLayout>
